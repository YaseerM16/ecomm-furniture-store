    <script>
        const userDet = '<%- JSON.stringify(user) %>'
        const parsedUsr = JSON.parse(userDet)
        console.log(userDet);
        $.validator.addMethod("passwordStrength", function (value, element) {
            const password = $(element).val();
            let strength = 0;
            if (password.length >= 6) strength += 1;
            if (password.match(/[a-z]+/)) strength += 1;
            if (password.match(/[A-Z]+/)) strength += 1;
            if (password.match(/[0-9]+/)) strength += 1;
            if (password.match(/[$@#&!]+/)) strength += 1;

            let strengthText = '';
            let strengthClass = '';

            switch (strength) {
                case 0:
                case 1:
                    strengthText = 'Weak';
                    strengthClass = 'text-danger';
                    break;
                case 2:
                case 3:
                    strengthText = 'Medium';
                    strengthClass = 'text-warning';
                    break;
                case 4:
                case 5:
                    strengthText = 'Strong';
                    strengthClass = 'text-success';
                    break;
            }

            $('#passwordStrength').text(`Strength: ${strengthText}`).removeClass('text-danger text-warning text-success').addClass(strengthClass);
            return value;
        }, "Please enter a password with combination of letters,symbols and characters.");

        $('#myForm').validate({
            rules: {
                username: {
                    pattern: /^[a-zA-Z]+(?: [a-zA-Z]+)*$/,
                    required: true
                },
                email: {
                    pattern: /^[a-zA-Z0-9._%+-]*@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/,
                    required: true
                },
                password: {
                    passwordStrength: true,
                    minlength: 6,
                    required: true
                },
                confirmPassword: {
                    equalTo: '#password',
                    required: true
                },
                phonenumber: {
                    required: true,
                    minlength: 10,
                    maxlength: 10,
                    digits: true
                }
            },
            messages: {
                username: {
                    pattern: "Please enter a valid username (letters and spaces only).",
                    required: "Username is required."
                },
                email: {
                    pattern: "Please enter a valid email address.",
                    required: "Email is required."
                },
                password: {
                    minlength: "The Password must be at least 6 characters",
                    required: "Password is required."
                },
                confirmPassword: {
                    equalTo: "Passwords does not match.",
                    required: "Confirm Password is required."
                },
                phonenumber: {
                    required: "Please enter a phone number",
                    digits: "Phone number must be Numeric",
                    minlength: "Phone number must be 10 Digits",
                    maxlength: "Phone number must be equals 10 Digits"
                }
            },
            errorClass: "error",
            submitHandler: function (form) {
                if ($('#myForm').valid()) { // Check if the form is valid
                    form.submit(); // Submit the form
                }
            }

        });


    </script>
