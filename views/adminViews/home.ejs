    <script>
        let twoWeeksSalesChart; // Declare a variable to store the chart instance
        let categoryWiseRevenueChart; // Declare a variable to store the chart instance

        async function chartAndGraph(range) {
            try {
                const response = await fetch(`/admin/adminDashBoardData?filter=${range}`, { method: 'GET' });
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                const data = await response.json();
                console.log(data);

                const {
                    getProductsCount,
                    getCategoryCount,
                    pendingOrdersCount,
                    deliveredOrdersCount,
                    currentDayRevenue,
                    fourteenDaysRevenue,
                    categoryWiseRevenue,
                    revenue,
                    monthlyRevenue,
                    activeUser
                } = data;

                console.log("Product Count: ", getProductsCount);
                console.log("Category Count: ", getCategoryCount);
                console.log("Pending Order :", pendingOrdersCount);
                console.log("Delivered Orders: ", deliveredOrdersCount);
                console.log("Current Revenue: ", currentDayRevenue);
                console.log("Fourteen Day Revenue: ", fourteenDaysRevenue);
                console.log("Category Revenue: ", categoryWiseRevenue);
                console.log("Revenue: ", revenue);
                console.log("Monthly Revenue: ", monthlyRevenue);
                console.log("Active User: ", activeUser);
                if (range) {
                    document.getElementById('heading').innerHTML = range + " sales";
                } else {
                    document.getElementById('heading')
                }
                document.getElementById('productsCount').innerHTML = getProductsCount;
                document.getElementById('categoryCount').innerHTML = `In ${getCategoryCount} Categories`;
                document.getElementById('completedOrdersCount').innerHTML = deliveredOrdersCount;
                document.getElementById('MonthlyRevenue').innerHTML = `&#8377&nbsp; ${monthlyRevenue}`;
                document.getElementById('currentDayRevenue').innerHTML = `&#8377&nbsp; ${currentDayRevenue}`;

                const twoWeekDates = fourteenDaysRevenue.date;
                const dateRevenues = fourteenDaysRevenue.revenue;
                console.log(twoWeekDates);

                const categoryNames = categoryWiseRevenue.categoryName;
                const categoryRevenue = categoryWiseRevenue.revenuePerCategory;

                const twoWeeksSalesData = {
                    labels: twoWeekDates,
                    datasets: [{
                        label: 'Sales',
                        data: dateRevenues,
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1,
                    }]
                };

                // Destroy the existing chart instance if it exists
                if (twoWeeksSalesChart) {
                    twoWeeksSalesChart.destroy();
                }

                // Config for Two Weeks Sales Report
                const twoWeeksSalesConfig = {
                    type: 'polarArea',
                    data: twoWeeksSalesData,
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                };

                // Render Two Weeks Sales Report
                twoWeeksSalesChart = new Chart(
                    document.getElementById('twoWeeksSalesChart'),
                    twoWeeksSalesConfig
                );

                // Data for Categorywise Revenue Chart
                const categoryWiseRevenueData = {
                    labels: categoryNames,
                    datasets: [{
                        label: 'Revenue',
                        data: categoryRevenue,
                        backgroundColor: [
                            'rgba(139, 0, 0, 0.7)', // Dark red
                            'rgba(255, 206, 86, 0.7)', // Yellow
                            'rgba(0, 0, 139, 0.7)' // Dark blue
                        ],
                        borderColor: [
                            'rgba(139, 0, 0, 1)', // Dark red
                            'rgba(255, 206, 86, 1)', // Yellow
                            'rgba(0, 0, 139, 1)' // Dark blue
                        ],
                        borderWidth: 1
                    }]
                };

                // Destroy the existing chart instance if it exists
                if (categoryWiseRevenueChart) {
                    categoryWiseRevenueChart.destroy();
                }

                const categoryWiseRevenueConfig = {
                    type: 'polarArea', // Change the type to 'radar'
                    data: categoryWiseRevenueData,
                    options: {
                        scales: {
                            r: {
                                beginAtZero: true,
                                grid: {
                                    circular: true
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    label: function (tooltipItem) {
                                        return `â‚¹ ${tooltipItem.raw}`;
                                    }
                                }
                            },
                            legend: {
                                display: true,
                                position: 'bottom',
                            }
                        }
                    }
                };

                // Render Categorywise Revenue Chart
                categoryWiseRevenueChart = new Chart(
                    document.getElementById('categoryWiseRevenueChart'),
                    categoryWiseRevenueConfig
                );

            } catch (error) {
                console.error("Error while generating the data: ", error);
            }
        }

        function updateRevenue() {
            const range = document.getElementById("timeRange").value;
            chartAndGraph(range);
        }

