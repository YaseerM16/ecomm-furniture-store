    <script>
        async function fnBlock(productId) {
            let response = await fetch(`/admin/productManagement/blockProduct?id=${productId}`, {
                method: 'GET',
            })
            let result = await response.json()
            if (result.block) {
                await Swal.fire({
                    icon: "error",
                    title: "Product Blocked",
                });
            }
            window.location.reload();
        }

        async function fnUnBlock(productId) {
            let response = await fetch(`/admin/productManagement/unBlockProduct?id=${productId}`, {
                method: 'GET',
            })
            let result = await response.json()
            if (result.unBlock) {
                await Swal.fire({
                    icon: "success",
                    title: "Product Unblocked",
                    confirmButtonText: "OK",
                });
            }
            window.location.reload();
        }

    </script>

